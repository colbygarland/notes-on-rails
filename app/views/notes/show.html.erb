<div class="flex flex-col lg:flex-row">
  <section class="mb-10 lg:mb-0">
    <p class="text-gray-400 mb-3"><small>Last updated at <%= @note.updated_at %></small></p>
    <h2 class="text-indigo-600 font-bold text-3xl mb-6"><%= @note.title %></h2>

    <p class="text-lg text-gray-700"><%= @note.body %></p>
    
    <%= render "comments", note: @note %>
  </section>

  <section class="lg:ml-auto">
    <div class="flex">
      <%= link_to "Edit", edit_note_path(@note), class: "bg-indigo-600 hover:bg-indigo-500 transition-colors duration-150 px-4 py-2 rounded-lg text-white font-bold mr-6" %>
      <%= link_to "Delete", note_path(@note), method: :delete, data: { confirm: "Are you sure? This is permanent." }, class: "bg-red-600 hover:bg-red-500 transition-colors duration-150 px-4 py-2 rounded-lg text-white font-bold" %>
    </div>
  </section>
</div>
