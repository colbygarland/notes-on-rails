<div  class="max-w-lg bg-gray-50 px-6 py-6 rounded-lg shadow">
  <%= form_with model: @note do |form| %>
    <div class="mb-6">
      <%= form.label :title %><br>
      <%= form.text_field :title, autofocus: true, class: "mt-2 block bg-white border border-gray-300 text-sm w-full px-3 py-2 rounded focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
      <% @note.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="mb-6">
      <%= form.label :body %><br>
      <%= form.text_area :body, class: "mt-2 block bg-white border border-gray-300 text-sm w-full px-3 py-2 rounded focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
      <% @note.errors.full_messages_for(:body).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div>
      <%= form.submit 'Submit', :class => "cursor-pointer bg-indigo-600 hover:bg-indigo-500 transition-colors duration-150 px-4 py-2 rounded-lg text-white font-bold"%>
    </div>
  <% end %>

</div>
