<div class="mt-20">
  <% if @note.comments.length > 0 %>
    <div class="mb-10">
      <h3 class="text-xl text-gray-600 font-bold mb-4">Comments</h3>
      <% @note.comments.each do |comment| %>
        <div class="mb-6 shadow-lg px-3 py-3 rounded relative">
          <%= link_to "+", [comment.note, comment], method: :delete, data: { confirm: "Are you sure? This is permanent." }, class: "absolute -right-2 top-1 shadow rounded-full transform rotate-45 text-lg inline-block h-5 w-5 bg-red-600 text-white flex items-center justify-center" %>
          <p class="text-indigo-600"><%= comment.title %></p>
          <p class="text-sm text-indigo-900"><small>Added on <%= comment.created_at %></small></p>
        </div>
      <% end %>
    </div>
    <% end %>

  <h3 class="text-xl text-gray-600 font-bold mb-4">Add a comment</h3>
  <%= form_with model: [ @note, @note.comments.build ] do |form| %>
    <div class="mb-6">
      <%= form.label :title %><br>
      <%= form.text_field :title, placeholder: "Enter a comment", autofocus: true, class: "mt-2 block bg-white border border-gray-300 text-sm w-full px-3 py-2 rounded focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
    <div>
      <%= form.submit 'Submit', :class => "cursor-pointer bg-indigo-600 hover:bg-indigo-500 transition-colors duration-150 px-4 py-2 rounded-lg text-white font-bold"%>
    </div>
  <% end %>
</div>
